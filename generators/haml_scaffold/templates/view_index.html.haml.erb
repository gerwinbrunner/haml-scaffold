%h1 <%= plural_name.capitalize %>

- if @<%= plural_name %>.empty?
  %p There are no <%= plural_name %> to show yet.
- else
  = collection_table @<%= plural_name %> do |t|
    - %w[<%= attributes.map(&:name).join(" ") %> actions].map(&:to_sym).each do |col|
      - t.header col
    - t.rows.alternate = :odd
    - t.rows.each do |row, <%= singular_name %>, index|
      - row.actions rest_links( <%= singular_name %> )

%p= link_to 'New <%= singular_name %>', new_<%= singular_name %>_path, :class => "add"
%p= will_paginate(@<%= plural_name %>)