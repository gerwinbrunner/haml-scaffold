%h1 <%= plural_name.capitalize %>

%table.list
  %thead
    %tr
<% for attribute in attributes -%>
      %th <%= attribute.column.human_name %>
<% end -%>
      %th{:colspan => 3}

  - if !@<%= plural_name %>.empty?
    = render :partial => "<%= singular_name %>", :collection => @<%= plural_name %>
  - else
    %tr
      %td{:colspan => <%= 3 + attributes.size %>} There are no <%= plural_name %> to show yet.
  %tfoot
    %tr
      %td{:colspan => <%= 3 + attributes.size %>}
        = link_to 'New <%= singular_name %>', new_<%= singular_name %>_path, :class => "add"

= will_paginate(@<%= plural_name %>)
