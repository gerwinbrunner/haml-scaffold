%h1= <%= attributes.empty? ? ("\"#{class_name} " + '##{@' + singular_name + '.to_param}"') : "@#{singular_name}.#{attributes.first.name}" %>
- content_tag_for :div, @<%= singular_name %>, :class => 'show' do
<% for attribute in attributes -%>
  .field <%= attribute.column.human_name %>:
  .value=h @<%= singular_name %>.<%= attribute.name %>
    
<% end -%>
.links
  = link_to 'Edit', edit_<%= singular_name %>_path(@<%= singular_name %>)
  = link_to 'Back', <%= plural_name %>_path