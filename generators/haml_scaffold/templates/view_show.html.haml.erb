%h1= "<%= singular_name.humanize %>: #{<%= attributes.empty? ? ("\"#{class_name} " + '##{@' + singular_name + '.to_param}"') : "@#{singular_name}.#{attributes.first.name}" %>}"

= details_table :object => @<%= singular_name %>, :only=>%w[<%= attributes.map(&:name).join(" ") %>]

%p.links
  = link_to 'Edit', edit_<%= singular_name %>_path(@<%= singular_name %>)
  = link_to 'Back', <%= plural_name %>_path
  = link_to 'Destroy', @<%= singular_name %>, :confirm => 'Are you sure?', :method => :delete